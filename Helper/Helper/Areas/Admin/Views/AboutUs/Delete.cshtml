<div class="card">
    <div class="card-body">
        <h6 class="card-title">   حذف  درباره ما. آیا مطمین به حذف هستید؟</h6>
        <form asp-action="Delete" class="needs-validation" novalidate="">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <!-- input -->
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Title" for="validationCustom03"></label>
                    <input readonly asp-for="Title" class="form-control" id="validationCustom03"
                           placeholder="عنوان">
                    <span asp-validation-for="Title" class="text-danger"> </span>
                </div>
            </div>


            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Description" for="validationCustom03"></label>
                    <textarea readonly asp-for="Description" type="" class="form-control" id="validationCustom03"
                              placeholder="متن درباره ما">
                    </textarea>
                    <span asp-validation-for="Description" class="text-danger"> </span>
                </div>
            </div>


            <!-- fileUpload checkBox && selectOption -->
            <div class="form-row">
                <div class="col-md-3 mb-3">

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input readonly class="form-check-input" asp-for="IsMain" /> @Html.DisplayNameFor(model => model.IsMain)
                        </label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-danger">حذف</button>
            <button type="submit" asp-action="Index" class="btn btn-success">بازگشت ب لیست</button>
        </form>

    </div>
</div>










