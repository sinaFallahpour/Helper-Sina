@model Helper.Areas.Admin.Models.ViewModels.Sttings.SettingsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@section Style{


