<div class="card">
    <div class="card-body">
        <h6 class="card-title"> فرم درباره ما</h6>
        <form asp-action="Index" class="needs-validation" novalidate="" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (!string.IsNullOrEmpty(ViewBag.Success))
            {
                <span class="text-success d-block text-center"> @ViewBag.Success   </span>
            }

            <!-- input -->
            <div class="form-row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Aboutus" for="validationCustom03"></label>
                    <textarea asp-for="Aboutus" class="form-control" id="AboutUs"
                              placeholder="درباره ما...">
                    </textarea>
                    <span asp-validation-for="Aboutus" class="text-danger"> </span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-12 mb-3">
                    <label asp-for="ContactUs" for="validationCustom03"></label>
                    <textarea asp-for="ContactUs" type="" class="form-control" id="ContactUs"
                              placeholder="متن ارتباط با ما...">
                    </textarea>
                    <span asp-validation-for="ContactUs" class="text-danger"> </span>
                </div>
            </div>



