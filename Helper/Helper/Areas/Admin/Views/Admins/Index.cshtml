@model IEnumerable<Helper.Areas.Admin.Models.ViewModels.User.AdminListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




@section Style{

    <!-- DataTable -->
    <link rel="stylesheet" href="~/Admin/vendors/dataTable//dataTables.min.css" type="text/css">
    <link href="~/SinaCustom/css/StyleSheet.css" rel="stylesheet" />
}


<a asp-action="Create" class="btn btn-primary mb-3">ایجاد ادمین</a>
<div class="card">
    <div class="card-body">
        <table id="example1" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th >  عکس</th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Nickname)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img class="_dataTableImage" src="@item.PhotoAddress" />
                    </td>

                    <td class="text-center">  @Html.DisplayFor(modelItem => item.Nickname)</td>
                    <td class="text-center">  @Html.DisplayFor(modelItem => item.FullName)</td>
                    <td class="text-center">  @Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="">تصحیح </i>
                            </a>

                            @*<a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="">حذف</i>
                </a>*@
                        </div>
                    </td>

                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th >  عکس</th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Nickname)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Gender)
                    </th >
                    <th> </th>


                </tr>
            </tfoot>
        </table>

    </div>
</div>



@section Scripts{
    <!-- DataTable -->
    <script src="~/Admin/vendors/dataTable/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendors/dataTable/dataTables.bootstrap4.min.js"></script>
    <script src="~/Admin/vendors/dataTable/dataTables.responsive.min.js"></script>
    <script src="~/Admin/assets/js/examples/datatable.js"></script>

    <script>

        $(document).ready(function () {
            $('#example1').DataTable();
        });

    </script>
}

