@model Helper.Models.Entities.TBL_MonyUnit

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@section Style{
    <link href="~/SinaCustom/css/StyleSheet.css" rel="stylesheet" />
}

<h1 class="text-center" style="text-shadow: 0.3px 1px #FF0000; ">     حذف واحد های پول      </h1>

<div class="card">
    <div class="card-body">
        <h6 class="card-title">   حذف   واحد پول . آیا مطمئن به حذف هستید؟</h6>
        <form asp-action="Delete" class="needs-validation" novalidate="">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <!-- input -->
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" for="validationCustom03"></label>
                    <input readonly asp-for="Name" class="form-control" id="validationCustom03"
                           placeholder="نام واحد پول">
                    <span asp-validation-for="Name" class="text-danger"> </span>
                </div>
            </div>


            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label asp-for="EnglishName" for="validationCustom03"></label>
                    <input readonly asp-for="EnglishName" class="form-control" id="validationCustom03"
                           placeholder="نام  انگلیسیی واحد پول">
                    <span asp-validation-for="EnglishName" class="text-danger"> </span>
                </div>
            </div>


            <div class="form-row mb-4">
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input asp-for="IsEnabled" type="checkbox" id="customCheckBoxInline2" class="custom-control-input" readonly>
                    <label asp-for="IsEnabled" class="custom-control-label" for="customCheckBoxInline2">آیا فعال است؟</label>
                    <span asp-validation-for="IsEnabled" class="text-danger"> </span>
                </div>
            </div>


            @*<div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" for="validationCustom03"></label>
                        <input readonly asp-for="Name" class="form-control" id="validationCustom03"
                               placeholder="نام واحد پول">
                        <span asp-validation-for="Name" class="text-danger"> </span>
                    </div>
                </div>*@

            <button type="submit" class="btn btn-danger">حذف</button>
            <button type="submit" asp-action="Index" class="btn btn-success">بازگشت ب لیست</button>
        </form>

    </div>
</div>

